#ifndef _SMESH_HOMARD_IDL
#define _SMESH_HOMARD_IDL

#include "SMESH_Mesh.idl"

#include "SALOME_Exception.idl"
#include "SALOMEDS.idl"

module SMESHHOMARD
{
  typedef sequence<double> double_array;
  typedef sequence<double> extrema;
  typedef sequence<string> ListGroupType;
  typedef sequence<string> ListBoundaryGroupType;
  typedef sequence<string> listeBoundarys;

  interface HOMARD_Boundary : SALOME_CMOD::GenericObj
  {
    // Generalites
    void     SetName(in string Name)         raises (SALOME_CMOD::SALOME_Exception);
    string   GetName()                       raises (SALOME_CMOD::SALOME_Exception);

    // Caracteristiques
    void     SetType (in long Type)          raises (SALOME_CMOD::SALOME_Exception);
    long     GetType()                       raises (SALOME_CMOD::SALOME_Exception);

    void     SetDataFile(in string DataFile) raises (SALOME_CMOD::SALOME_Exception);
    string   GetDataFile()                   raises (SALOME_CMOD::SALOME_Exception);

    void     SetMeshName(in string MeshName) raises (SALOME_CMOD::SALOME_Exception);
    string   GetMeshName()                   raises (SALOME_CMOD::SALOME_Exception);

    void     SetCylinder (in double Xcentre, in double Ycentre, in double Zcentre,
                          in double Xaxe, in double Yaxe, in double Zaxe, in double rayon)
      raises (SALOME_CMOD::SALOME_Exception);

    void     SetSphere (in double Xcentre, in double Ycentre, in double Zcentre, in double rayon)
      raises (SALOME_CMOD::SALOME_Exception);

    void     SetConeR (in double Xcentre1, in double Ycentre1, in double Zcentre1,
                       in double Rayon1,
                       in double Xcentre2, in double Ycentre2, in double Zcentre2,
                       in double Rayon2) raises (SALOME_CMOD::SALOME_Exception);

    void     SetConeA(in double Xaxe, in double Yaxe, in double Zaxe, in double Angle,
                      in double Xcentre, in double Ycentre, in double ZCentre)
      raises (SALOME_CMOD::SALOME_Exception);

    void     SetTorus (in double Xcentre, in double Ycentre, in double Zcentre,
                       in double Xaxe, in double Yaxe, in double Zaxe,
                       in double rayonRev, in double rayonPri)
      raises (SALOME_CMOD::SALOME_Exception);

    SMESHHOMARD::double_array GetCoords() raises (SALOME_CMOD::SALOME_Exception);

    void     SetLimit (in double Xincr, in double Yincr, in double Zincr)
      raises (SALOME_CMOD::SALOME_Exception);
    SMESHHOMARD::double_array GetLimit() raises (SALOME_CMOD::SALOME_Exception);

    void       AddGroup(in string LeGroupe)                raises (SALOME_CMOD::SALOME_Exception);
    void       SetGroups(in ListGroupType ListGroup)       raises (SALOME_CMOD::SALOME_Exception);
    ListGroupType GetGroups()                              raises (SALOME_CMOD::SALOME_Exception);

    string   GetDumpPython()                 raises (SALOME_CMOD::SALOME_Exception);
  };

  interface HOMARD_Cas : SALOME_CMOD::GenericObj
  {
    void     SetDirName(in string NomDir) raises (SALOME_CMOD::SALOME_Exception);
    string   GetDirName()                 raises (SALOME_CMOD::SALOME_Exception);

    void     SetBoundingBox(in extrema LesExtremes)        raises (SALOME_CMOD::SALOME_Exception);
    extrema  GetBoundingBox()                              raises (SALOME_CMOD::SALOME_Exception);

    void     AddGroup(in string Group)                     raises (SALOME_CMOD::SALOME_Exception);
    void     SetGroups(in ListGroupType ListGroup)         raises (SALOME_CMOD::SALOME_Exception);
    ListGroupType GetGroups()                              raises (SALOME_CMOD::SALOME_Exception);

    void     AddBoundary(in string BoundaryName) raises (SALOME_CMOD::SALOME_Exception);
    void     AddBoundaryGroup(in string BoundaryName,
                              in string Group) raises (SALOME_CMOD::SALOME_Exception);
    ListBoundaryGroupType GetBoundaryGroup() raises (SALOME_CMOD::SALOME_Exception);
    void SupprBoundaryGroup() raises (SALOME_CMOD::SALOME_Exception);

    string GetDumpPython() raises (SALOME_CMOD::SALOME_Exception);
  };

  interface HOMARD_Gen : SALOME_CMOD::GenericObj
  {
    // Create boundaries
    HOMARD_Boundary CreateBoundaryCAO (in string BoundaryName, in string FileName)
      raises(SALOME_CMOD::SALOME_Exception);
    HOMARD_Boundary CreateBoundaryDi (in string BoundaryName, in string MeshName,
                                      in string FileName)
      raises(SALOME_CMOD::SALOME_Exception);
    HOMARD_Boundary CreateBoundaryCylinder (in string BoundaryName,
                                            in double Xcentre, in double Ycentre, in double Zcentre,
                                            in double Xaxis, in double Yaxis, in double Zaxis,
                                            in double Radius)
      raises (SALOME_CMOD::SALOME_Exception);
    HOMARD_Boundary CreateBoundarySphere (in string BoundaryName,
                                          in double Xcentre, in double Ycentre, in double Zcentre,
                                          in double Radius)
      raises(SALOME_CMOD::SALOME_Exception);
    HOMARD_Boundary CreateBoundaryConeR (in string BoundaryName,
                                         in double Xcentre1, in double Ycentre1, in double Zcentre1,
                                         in double Radius1,
                                         in double Xcentre2, in double Ycentre2, in double Zcentre2,
                                         in double Radius2)
      raises(SALOME_CMOD::SALOME_Exception);
    HOMARD_Boundary CreateBoundaryConeA (in string BoundaryName,
                                         in double Xaxis, in double Yaxis, in double Zaxis,
                                         in double Angle,
                                         in double Xcentre, in double Ycentre, in double Zcentre)
      raises(SALOME_CMOD::SALOME_Exception);
    HOMARD_Boundary CreateBoundaryTorus (in string BoundaryName,
                                         in double Xcentre, in double Ycentre, in double Zcentre,
                                         in double Xaxis, in double Yaxis, in double Zaxis,
                                         in double RadiusRev, in double RadiusPri)
      raises (SALOME_CMOD::SALOME_Exception);

    // Set mesh (SMESH_Mesh object or MED file) and working directory
    HOMARD_Cas CreateCaseOnMesh(in string MeshName,
                                in SMESH::SMESH_Mesh smeshMesh,
                                in string theWorkingDir) raises(SALOME_CMOD::SALOME_Exception);
    HOMARD_Cas CreateCase(in string MeshName,
                          in string FileName,
                          in string theWorkingDir) raises(SALOME_CMOD::SALOME_Exception);

    // Associate boundaries to groups
    void AddBoundary(in string BoundaryName) raises (SALOME_CMOD::SALOME_Exception);
    void AddBoundaryGroup(in string BoundaryName,
                          in string Group) raises (SALOME_CMOD::SALOME_Exception);

    // Information
    HOMARD_Boundary  GetBoundary(in string BoundaryName) raises (SALOME_CMOD::SALOME_Exception);
    HOMARD_Cas       GetCase() raises (SALOME_CMOD::SALOME_Exception);
    listeBoundarys   GetAllBoundarysName()  raises (SALOME_CMOD::SALOME_Exception);

    //  Preferences
    void SetConfType(in long ConfType) raises (SALOME_CMOD::SALOME_Exception);
    void SetKeepMedOUT (in boolean theKeepMedOUT);
    void SetPublishMeshOUT (in boolean thePublishMeshOUT);
    void SetMeshNameOUT (in string theMeshName) raises (SALOME_CMOD::SALOME_Exception);
    void SetMeshFileOUT (in string theFileName) raises (SALOME_CMOD::SALOME_Exception);

    void SetVerboseLevel (in long theLevel);
    void SetKeepWorkingFiles (in boolean theKeepWorkingFiles);
    void SetLogInFile (in boolean theLogInFile);
    void SetLogFile (in string theFileName) raises (SALOME_CMOD::SALOME_Exception);
    void SetRemoveLogOnSuccess (in boolean theRemoveLogOnSuccess);

    // Computation
    long Compute() raises (SALOME_CMOD::SALOME_Exception);

    // Clean data
    void InvalideBoundary (in string BoundaryName) raises (SALOME_CMOD::SALOME_Exception);
    long DeleteBoundary (in string BoundaryName) raises (SALOME_CMOD::SALOME_Exception);
    void DeleteCase() raises (SALOME_CMOD::SALOME_Exception);
  };

}; // module SMESHHOMARD

#endif
