top_builddir=../..
srcdir=@srcdir@
VPATH=.:@srcdir@


@COMMENCE@

# header files 
EXPORT_HEADERS= DriverSTL_R_SMDS_Mesh.h DriverSTL_W_SMDS_Mesh.h

# Libraries targets
LIB = libMeshDriverSTL.la
